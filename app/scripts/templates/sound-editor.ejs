<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<a href="javascript:void(0)" class="close right" data-dismiss="modal" aria-hidden="true">&times;</a>
			<h4 class="modal-title">Sample Editor: <span data-bind="name"></span></h4>
		</div>
		<div class="modal-body">
			<form>
				<div class="row">
					<div class="small-12 columns">
						<label>Source</label>
						<input type="text" placeholder="" data-bind="src" />
					</div>
				</div>
				<div class="row">
					<div class="small-4 columns">
						<label>Bound To Pad:</label>
						<input type="text" data-bind="name" />
					</div>
					<div class="small-4 columns">
						<label>Key Trigger:</label>
						<input type="text" placeholder="" data-bind="keyCode" />
					</div>
					<div class="small-4 columns">
						<div class="row collapse">
							<label>Effects</label>
							<div class="small-9 columns">
								<input type="text" placeholder="" />
							</div>
							<div class="small-3 columns">
								<span class="postfix">.com</span>
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="small-12 columns">
						<label>Select Box</label>
						<select>
							<option value="husker">Husker</option>
							<option value="starbuck">Starbuck</option>
							<option value="hotdog">Hot Dog</option>
							<option value="apollo">Apollo</option>
						</select>
					</div>
				</div>
				<div class="row">
					<div class="small-6 columns">
						<label>Choose Your Favorite</label>
						<input type="radio" name="pokemon" value="Red" id="pokemonRed"><label for="pokemonRed">Radio 1</label>
						<input type="radio" name="pokemon" value="Blue" id="pokemonBlue"><label for="pokemonBlue">Radio 2</label>
					</div>
					<div class="small-6 columns">
						<label>Check these out</label>
						<input id="checkbox1" type="checkbox"><label for="checkbox1">Checkbox 1</label>
						<input id="checkbox2" type="checkbox"><label for="checkbox2">Checkbox 2</label>
					</div>
				</div>
				<div class="row">
					<div class="small-12 columns">
						<label>Textarea Label</label>
						<textarea placeholder="small-12.columns"></textarea>
					</div>
				</div>
			</form>
		</div>
		<div class="modal-footer">
			<a data-dismiss="modal" data-bind="close" data-behavior="close" class="btn">Cancel</a>
			<a data-dismiss="modal" data-bind="action" data-behavior="action" class="btn">Save</a>
		</div>
	</div>
</div>